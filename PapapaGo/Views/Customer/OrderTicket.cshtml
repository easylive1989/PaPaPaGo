@model dynamic

<!DOCTYPE html>

<html>
<head>
    <title>OrderTicket</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <h3>顧客訂票</h3>
        <div class="form-horizontal">
            <div class="form-group">
                <label for="fromStation" class="col-sm-2 control-label">Origin</label>
                <div class="col-sm-10">
                    <select name="oriSelect">
                        <option value="ST_D8NNN9ZK">Roma Termini</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="destination" class="col-sm-2 control-label">Destination</label>
                <div class="col-sm-10">
                    <select name="desSelect">
                        <option value="ST_EZVVG1X5">Milano Centrale</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    <input name="username" type="text" />
                </div>
            </div>
            <div class="form-group">
                <label for="lbDateTime" class="col-sm-2 control-label">DateTime</label>
                <div class="col-sm-10">
                    <input name="datetime" type="datetime-local" />
                </div>
            </div>
            <div class="form-group">
                <label for="fblink" class="col-sm-2 control-label">FB ID</label>
                <div class="col-sm-10">
                    <input name="fblink" type="text" />
                </div>
            </div>
            <div class="form-group">
                <label for="saleprice" class="col-sm-2 control-label">Sale Price</label>
                <div class="col-sm-10">
                    <select name="priceSelect">
                        <option value="2">x2</option>
                        <option value="5">x5</option>
                        <option value="10">x10</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="oneTicket" class="col-sm-3 control-label"></label>
                <div class="col-sm-2">
                    <a href="@Url.Action("BookResult", "Result")" class="btn btn-sm btn-primary">兩張票</a>
                </div>
            </div>
            <div class="form-group">
                <label for="oneTicket" class="col-sm-3 control-label"></label>
                <div class="col-sm-2">
                    <button formaction="BidResult" formmethod="post" class="btn btn-sm btn-primary">拍 賣</button>
                </div>
            </div>
        </div>
    }
</body>
</html>