@model dynamic

<!DOCTYPE html>

<html>
<head>
    <title>OrderTicket</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <h3>一般訂票</h3>
        <div class="form-horizontal">
            <div class="form-group">
                <label for="fromStation" class="col-sm-2 control-label">Origin</label>
                <div class="col-sm-10">
                    <select name="oriSelect">
                        <option value="ST_D8NNN9ZK">Roma Termini</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="destination" class="col-sm-2 control-label">Destination</label>
                <div class="col-sm-10">
                    <select name="desSelect">
                        <option value="ST_EZVVG1X5">Milano Centrale</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="name" class="col-sm-2 control-label">Name</label>
                <div class="col-sm-10">
                    <input id="name" name="username" type="text" required/>
                </div>
            </div>
            <div class="form-group">
                <label for="lbDateTime" class="col-sm-2 control-label">DateTime</label>
                <div class="col-sm-10">
                    <input id="time" name="datetime" type="datetime-local" required/>
                </div>
            </div>
            <div id="myRadioGroup">
                一般訂票<input type="radio" id="normalRadio" name="order" value="1" checked="checked" onclick="javascript:radioCheck();" />
                拍賣訂票<input type="radio" id="bidRadio" name="order" value="2" onclick="javascript:radioCheck();"/>
                <div id="normalDiv" class="desc">
                    <div class="form-group">
                        <label for="oneTicket" class="col-sm-3 control-label"></label>
                        <div class="col-sm-2">
                            <button formaction="BookResult" formmethod="post" class="btn btn-sm btn-primary">兩張票</button>
                        </div>
                    </div>
                </div>
                <div id="bidDiv" class="desc" style="display: none;">
                    <div class="form-group">
                        <label for="fblink" class="col-sm-2 control-label">FB ID</label>
                        <div class="col-sm-10">
                            <input id="fb" name="fblink" type="text" required/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="saleprice" class="col-sm-2 control-label">Sale Price</label>
                        <div class="col-sm-10">
                            <select name="priceSelect">
                                <option value="2">x2</option>
                                <option value="5">x5</option>
                                <option value="10">x10</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="oneTicket" class="col-sm-3 control-label"></label>
                        <div class="col-sm-2">
                            <button formaction="BidResult" formmethod="post" class="btn btn-sm btn-primary">拍 賣</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    
<script type="text/javascript">
    function radioCheck() {
        if (document.getElementById('normalRadio').checked) {
            document.getElementById('normalDiv').style.display = 'block';
        } else {
            document.getElementById('normalDiv').style.display = 'none';
        }

        if (document.getElementById('bidRadio').checked) {
            document.getElementById('bidDiv').style.display = 'block';
        } else {
            document.getElementById('bidDiv').style.display = 'none';
        }
    }
</script>
</body>
</html>