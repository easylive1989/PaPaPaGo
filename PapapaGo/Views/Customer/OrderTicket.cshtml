@model dynamic

<!DOCTYPE html>

<html>
<head>
    <title>OrderTicket</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <h3>顧客訂票</h3>
        <div class="form-horizontal">
            <div class="form-group">
                <label for="fromStation" class="col-sm-2 control-label">Origin</label>
                <div class="col-sm-10">
                    <select id="oriSelect">
                        <option value="ST_D8NNN9ZK">Roma Termini</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="destination" class="col-sm-2 control-label">Destination</label>
                <div class="col-sm-10">
                    <select id="desSelect">
                        <option value="ST_EZVVG1X5">Milano Centrale</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="oneTicket" class="col-sm-3 control-label">2,000 €</label>
                <div class="col-sm-2">
                    <a href="@Url.Action("BookResult","Result")" class="btn btn-sm btn-primary">兩張票</a>
                </div>
            </div>
            <div class="form-group">
                <label for="oneTicket" class="col-sm-3 control-label">2,000 €</label>
                <div class="col-sm-2">
                    <a href="@Url.Action("Index","Bid")" class="btn btn-sm btn-primary">拍 賣</a>
                </div>
            </div>
        </div>
    }

</body>
</html>